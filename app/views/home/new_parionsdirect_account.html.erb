<div class="page-header">
  <div class="icon">
    <span class="ico-arrow-right"></span>
  </div>
  <h1>Parionsdirect<small>Formulaire de cr√©ation de compte</small></h1>
</div>

<div class="row-fluid">
  <%= form_tag create_parionsdirect_account_path do %>
    <div class="row-form">
      <div class="span12">
        <input type="password" value = "<%= @password %>" name="password" placeholder="Mot de passe"/>
        <span class="bottom">Mot de passe</span>
      </div>
    </div>
    <div class="row-form">
      <div class="span12">
        <input type="password" value = "<%= @password_confirmation %>" name="password_confirmation" placeholder="Confirmation du mot de passe"/>
        <span class="bottom">Confirmation du mot de passe</span>
      </div>
    </div>
    <div class="row-form">
      <div class="span12">
        <button class="btn">Valider <span class="icon-arrow-next icon-white"></span></button>
      </div>
    </div>
  <% end %>
</div>
