<div class="page-header">
  <div class="icon">
    <span class="ico-arrow-right"></span>
  </div>
  <h1>Paymoney<small>Liste des OTP</small></h1>
</div>

<div class="row-fluid">
  <% if @otps.blank? %>
  <div class="row-form">
    <div class="span12">
      Aucune transaction à afficher
    </div>
  </div>
  <% else %>
    <% @otps.each do |otp| %>
      <div class="row-form">
        <div class="span12">
          <% t = Time.at(((otp["otpDate"].to_s)[0..9]).to_i) %>
          <%= otp["otpPin"] %> - <%= otp["otpStatus"] == true ? 'Succès' : 'Echec' %> - <%= t.strftime("%d-%m-%Y") %> à <%= t.strftime("%Hh %Mmn") %>
        </div>
      </div>
    <% end %>
  <% end %>
  <div class="row-form">
    <div class="span12">
      <%= link_to '1- OTP autre compte', '#' %>
    </div>
  </div>
  <div class="row-form">
    <div class="span12">
      <%= link_to 'Retour', gaming_menu_path %>
    </div>
  </div>
  <div class="row-form">
    <div class="span12">
      <%= link_to 'Accueil', root_path %>
    </div>
  </div>
</div>
