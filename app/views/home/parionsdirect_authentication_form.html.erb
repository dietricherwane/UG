<div class="page-header">
  <div class="icon">
    <span class="ico-arrow-right"></span>
  </div>
  <h1>Parionsdirect<small>Formulaire de connexion</small></h1>
</div>

<div class="row-fluid">
  <%= form_tag authenticate_parionsdirect_account_path do %>
    <div class="row-form">
      <div class="span12">
        <input type="text" name="password" placeholder="Mot de passe"/>
        <span class="bottom">Mot de passe</span>
      </div>
    </div>
    <div class="row-form">
      <div class="span12">
        <button class="btn">Valider <span class="icon-arrow-next icon-white"></span></button>
      </div>
    </div>
  <% end %>
</div>
