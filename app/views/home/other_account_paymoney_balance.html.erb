<div class="page-header">
  <div class="icon">
    <span class="ico-arrow-right"></span>
  </div>
  <h1>Paymoney<small>Veuillez entrer le numéro de compte et le mot de passe Paymoney pour afficher le solde</small></h1>
</div>

<div class="row-fluid">
  <%= form_tag get_other_paymoney_balance_path do %>
    <div class="row-form">
      <div class="span12">
        <input type="text" name="paymoney_account_number" placeholder="Numéro de compte Paymoney"/>
        <span class="bottom">Numéro de compte Paymoney</span>
      </div>
    </div>
    <div class="row-form">
      <div class="span12">
        <input type="password" name="password" placeholder="Mot de passe"/>
        <span class="bottom">Mot de passe</span>
      </div>
    </div>
    <div class="row-form">
      <div class="span12">
        <button class="btn">Valider <span class="icon-arrow-next icon-white"></span></button>
      </div>
    </div>
    <div class="row-form">
    <div class="span12">
      <%= link_to 'Retour', gaming_menu_path %>
    </div>
  </div>
  <% end %>
</div>
