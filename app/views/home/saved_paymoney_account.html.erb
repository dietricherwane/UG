<div class="page-header">
  <div class="icon">
    <span class="ico-arrow-right"></span>
  </div>
  <h1>Parionsdirect<small>Compte Paymoney associé à Parionsdirect</small></h1>
</div>

<div class="row-fluid">
  <%= form_tag update_saved_paymoney_account_path do %>
    <div class="row-form">
      <div class="span12">
        <input type="text" value = "<%= session[:paymoney_account_number] %>" name="paymoney_account" placeholder="Numéro de compte Paymoney"/>
        <span class="bottom">Numéro de compte Paymoney</span>
      </div>
    </div>
    <div class="row-form">
      <div class="span12">
        <button class="btn">Valider <span class="icon-arrow-next icon-white"></span></button>
      </div>
    </div>
    <div class="row-form">
    <div class="span12">
      <%= link_to 'Retour', gaming_menu_path %>
    </div>
  </div>
  <% end %>
</div>
