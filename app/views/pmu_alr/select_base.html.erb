<div class="page-header">
  <div class="icon">
    <span class="ico-arrow-right"></span>
  </div>
  <h1>PMU ALR<small>
<%= session[:alr_national] %> > <%= session[:alr_bet_type] %> > <%= session[:alr_formula] %><br />
<% session[:race_data].each do |race_data| %>
    <% if race_data["race_id"] == session[:alr_program_id] + '0' + session[:alr_national_index] %>
      <%= race_data["name"] %><br />
      Nombre de partants: <%= race_data["max_runners"] %><br />
      Non partants: <%= race_data["scratched_list"] %><br />
    <% end %>
  <% end %>
Saisissez le numero de votre cheval de BASE et ulitiser X pour definir l'emplacement de votre selection</small></h1>
</div>

<div class="row-fluid">
  <%= form_tag pmu_alr_validate_base_path do %>
    <div class="row-form">
      <div class="span12">
        <input type="text" name="base" placeholder="Numéros de base"/>
        <span class="bottom">Numéros de base</span>
      </div>
    </div>
    <div class="row-form">
      <div class="span12">
        <button class="btn">Valider<span class="icon-arrow-next icon-white"></span></button>
      </div>
    </div>
  <% end %>
  <div class="row-form">
    <div class="span12">
      <%= link_to 'Retour', pmu_alr_select_horses_path %>
    </div>
  </div>
  <div class="row-form">
    <div class="span12">
      <%= link_to 'Accueil', root_path %>
    </div>
  </div>
</div>
