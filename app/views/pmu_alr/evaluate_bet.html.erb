<div class="page-header">
  <div class="icon">
    <span class="ico-arrow-right"></span>
  </div>
  <h1>PMU ALR<small>
<%= session[:alr_national] %> > <%= session[:alr_bet_type] %> > <%= session[:alr_formula] %><br />
Chevaux: <%= session[:alr_selection] %><br />
Saisissez votre code secret Paymoney</small></h1>
</div>

<div class="row-fluid">
  <%= form_tag alr_place_bet_path do %>
    <div class="row-form">
      <div class="span12">
        <input type="text" name="paymoney_account_password" placeholder="Code secret du compte Paymoney"/>
        <span class="bottom">Code secret du compte Paymoney</span>
      </div>
    </div>
    <div class="row-form">
      <div class="span12">
        <button class="btn">Valider <span class="icon-arrow-next icon-white"></span></button>
      </div>
    </div>
  <% end %>
  <div class="row-form">
    <div class="span12">
      <%= link_to 'Retour', pmu_alr_select_horses_path %>
    </div>
  </div>
  <div class="row-form">
    <div class="span12">
      <%= link_to 'Accueil', root_path %>
    </div>
  </div>
</div>
