<div class="page-header">
  <div class="icon">
    <span class="ico-arrow-right"></span>
  </div>
  <h1>PMU PLR<small>Liste des courses</small></h1>
</div>

<div class="row-fluid">
  <% if @races.blank? %>
  <div class="row-form">
    <div class="span12">
      Aucune transaction à afficher
    </div>
  </div>
  <% else %>
    <% @races.each do |race| %>
      <div class="row-form">
        <div class="span12">
          Numéro de course: <%= race["numero_course"] %> - Départ: <%= race["depart"] %> <br />
          Réunion: <%= race["reunion"] %> - Course: <%= race["course"] %> <br />
          Nombre de partants: <%= race["Partants"] %> <br />
          Détails: <%= race["details"] %>
        </div>
      </div>
    <% end %>
    <div class="row-form">
      <div class="span12">
        <%= paginate @races %>
      </div>
    </div>
  <% end %>
  <div class="row-form">
    <div class="span12">
      <%= link_to 'Retour', plr_game_selection_path %>
    </div>
  </div>
  <div class="row-form">
    <div class="span12">
      <%= link_to 'Accueil', root_path %>
    </div>
  </div>
</div>
