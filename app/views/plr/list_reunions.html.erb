<div class="page-header">
  <div class="icon">
    <span class="ico-arrow-right"></span>
  </div>
  <h1>PMU PLR<small>Liste des réunions</small></h1>
</div>

<div class="row-fluid">
  <% if @reunions.blank? %>
  <div class="row-form">
    <div class="span12">
      Aucune réunion à afficher
    </div>
  </div>
  <% else %>
    <% @reunions.each do |reunion| %>
      <div class="row-form">
        <div class="span12">
          <%= reunion %>
        </div>
      </div>
    <% end %>
  <% end %>
  <div class="row-form">
    <div class="span12">
      <%= link_to 'Retour', plr_path %>
    </div>
  </div>
  <div class="row-form">
    <div class="span12">
      <%= link_to 'Accueil', root_path %>
    </div>
  </div>
</div>
