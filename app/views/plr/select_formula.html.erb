<div class="page-header">
  <div class="icon">
    <span class="ico-arrow-right"></span>
  </div>
  <h1>PMU PLR<small>
<%= session[:plr_begin_date] %><br />
<%= session[:plr_number_of_horses] %><br />
<%= session[:bet_type_value] %><br />
<%= session[:menu_index] == 1 ? "Choisissez votre formule de jeu" : "Saisissez les numéros de vos chevaux en les séparant par un espace" %>: Réunion: R<%= session[:plr_reunion_number] %> - Course: C<%= session[:race_number] %></small></h1>
</div>

<div class="row-fluid">
  <% if session[:menu_index] == 1 %>
    <div class="row-form">
      <div class="span12">
        <%= link_to '1- Long champ', plr_formula_selection_path("longchamp") %>
      </div>
    </div>
    <div class="row-form">
      <div class="span12">
        <%= link_to '2- Champ réduit', plr_formula_selection_path("champ_reduit") %>
      </div>
    </div>
    <div class="row-form">
      <div class="span12">
        <%= link_to '3- Champ total', plr_formula_selection_path("champ_total") %>
      </div>
    </div>
  <% else %>
    <%= form_tag plr_stake_selection_path do %>
      <div class="row-form">
        <div class="span12">
          <input type="text" name="plr_selection" placeholder="Numéros des chevaux"/>
          <span class="bottom">Numéros des chevaux</span>
        </div>
      </div>
      <div class="row-form">
        <div class="span12">
          <button class="btn">Valider <span class="icon-arrow-next icon-white"></span></button>
        </div>
      </div>
    <% end %>
  <% end %>
  <div class="row-form">
    <div class="span12">
      <%= link_to 'Retour', plr_bet_type_path %>
    </div>
  </div>
  <div class="row-form">
    <div class="span12">
      <%= link_to 'Accueil', root_path %>
    </div>
  </div>
</div>
