<div class="page-header">
  <div class="icon">
    <span class="ico-arrow-right"></span>
  </div>
  <h1>PMU PLR<small><%= session[:plr_formula_value] == "Long champs" ? "Saisissez les numéros de vos chevaux en les separant d'un espace" : "Saisissez votre base en les séparant d'un espace" %><br />R<%= session[:plr_reunion_number] %>C<%= session[:race_number] %><br /><%= session[:bet_type_value] %> > <%= session[:plr_formula_value] %></small></h1>
</div>

<div class="row-fluid">
  <% if session[:plr_formula_value] == "Long champs" %>
    <%= form_tag plr_stake_selection_path do %>
      <div class="row-form">
        <div class="span12">
          <input type="text" name="horses_numbers" placeholder="Numéros des chevaux"/>
          <span class="bottom">Numéros des chevaux</span>
        </div>
      </div>
      <div class="row-form">
        <div class="span12">
          <button class="btn">Valider <span class="icon-arrow-next icon-white"></span></button>
        </div>
      </div>
    <% end %>
  <% else %>
    <% if session[:plr_formula_value] == "Champ réduit" %>
      <%= form_tag plr_base_selection_path do %>
    <% else %>
      <%= form_tag plr_total_selection_path do %>
    <% end %>
      <div class="row-form">
        <div class="span12">
          <input type="text" name="plr_base" placeholder="Base"/>
          <span class="bottom">Base</span>
        </div>
      </div>
      <div class="row-form">
        <div class="span12">
          <button class="btn">Valider <span class="icon-arrow-next icon-white"></span></button>
        </div>
      </div>
    <% end %>
  <% end %>
  <div class="row-form">
    <div class="span12">
      <%= link_to 'Retour', plr_bet_type_path %>
    </div>
  </div>
  <div class="row-form">
    <div class="span12">
      <%= link_to 'Accueil', root_path %>
    </div>
  </div>
</div>
