<div class="page-header">
  <div class="icon">
    <span class="ico-arrow-right"></span>
  </div>
  <h1>PMU PLR<small>Veuillez entrer votre numéro de réunion</small></h1>
</div>

<div class="row-fluid">
  <%= form_tag plr_race_selection_path do %>
    <div class="row-form">
      <div class="span12">
        <input type="text" name="reunion" placeholder="Numéro de réunion"/>
        <span class="bottom">Numéro de réunion</span>
      </div>
    </div>
    <div class="row-form">
      <div class="span12">
        <button class="btn">Valider <span class="icon-arrow-next icon-white"></span></button>
      </div>
    </div>
  <% end %>
  <div class="row-form">
    <div class="span12">
      <%= link_to 'Liste des réunions', plr_list_reunions_path %>
    </div>
  </div>
  <div class="row-form">
    <div class="span12">
      <%= link_to '00- Accueil', root_path %>
    </div>
  </div>
</div>
