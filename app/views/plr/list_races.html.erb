<div class="page-header">
  <div class="icon">
    <span class="ico-arrow-right"></span>
  </div>
  <h1>PMU PLR<small>Liste des courses</small></h1>
</div>

<div class="row-fluid">
  <% if @races.blank? %>
  <div class="row-form">
    <div class="span12">
      Aucune course à afficher
    </div>
  </div>
  <% else %>
    <% @races.each do |race| %>
      <% if "R" + session[:plr_reunion_number] == race["reunion"] %>
        <div class="row-form">
          <div class="span12">
            Départ: <%= race["depart"] %> <br />
            Réunion: <%= race["reunion"] %> - Course: <%= race["course"] %>
          </div>
        </div>
      <% end %>
    <% end %>
  <% end %>
  <div class="row-form">
    <div class="span12">
      <%= link_to 'Retour', race_selection_path %>
    </div>
  </div>
  <div class="row-form">
    <div class="span12">
      <%= link_to 'Accueil', root_path %>
    </div>
  </div>
</div>
