<div class="page-header">
  <div class="icon">
    <span class="ico-arrow-right"></span>
  </div>
  <h1>PMU PLR<small>Veuillez entrer votre numéro de course <br /> Réunion: R<%= session[:plr_reunion_number] %></small></h1>
</div>

<div class="row-fluid">
  <%= form_tag plr_game_selection_path do %>
    <div class="row-form">
      <div class="span12">
        <input type="text" name="plr_race_number" placeholder="Numéro de course"/>
        <span class="bottom">Numéro de course</span>
      </div>
    </div>
    <div class="row-form">
      <div class="span12">
        <button class="btn">Valider <span class="icon-arrow-next icon-white"></span></button>
      </div>
    </div>
  <% end %>
  <div class="row-form">
    <div class="span12">
      <%= link_to 'Retour', plr_path %>
    </div>
  </div>
  <div class="row-form">
    <div class="span12">
      <%= link_to 'Accueil', root_path %>
    </div>
  </div>
</div>
