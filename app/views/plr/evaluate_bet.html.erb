<div class="page-header">
  <div class="icon">
    <span class="ico-arrow-right"></span>
  </div>
  <h1>PMU PLR<small>
Réunion: R<%= session[:plr_reunion_number] %> - Course: C<%= session[:plr_race_number] %> <br />
<%= session[:plr_number_of_horses] %> partants <%= session[:plr_begin_date] %><br />
<%= session[:bet_type_value] %> > <%= session[:plr_formula_value] %><br />
Base: <%= session[:plr_base] %><br />
Chevaux: <%= session[:plr_selection] %><br />
<%= session[:plr_formula_value] == "Long champs" ? "Saisissez les numéros de vos chevaux en les separant d'un espace" : "Saisissez votre base en les séparant d'un espace" %></small></h1>
</div>

<div class="row-fluid">
  <%= form_tag plr_place_bet_path do %>
    <div class="row-form">
      <div class="span12">
        <input type="text" name="paymoney_account_password" placeholder="Mot de passe du compte Paymoney"/>
        <span class="bottom">Mot de passe du compte Paymoney</span>
      </div>
    </div>
    <div class="row-form">
      <div class="span12">
        <button class="btn">Valider <span class="icon-arrow-next icon-white"></span></button>
      </div>
    </div>
  <% end %>
  <div class="row-form">
    <div class="span12">
      <%= link_to 'Retour', plr_bet_type_path %>
    </div>
  </div>
  <div class="row-form">
    <div class="span12">
      <%= link_to 'Accueil', root_path %>
    </div>
  </div>
</div>
