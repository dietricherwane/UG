<div class="page-header">
  <div class="icon">
    <span class="ico-arrow-right"></span>
  </div>
  <h1>PMU PLR<small>Liste des paris</small></h1>
</div>

<div class="row-fluid">
  <% if @bets.blank? %>
  <div class="row-form">
    <div class="span12">
      Aucune transaction à afficher
    </div>
  </div>
  <% else %>
    <% @bets.each do |bet| %>
      <div class="row-form">
        <div class="span12">
          Statut: <%= bet["bet_status"] %> - N° ticket: <%= bet["ticket_number"] %> - N° ref.: <%= bet["ref_number"] %>
        </div>
      </div>
    <% end %>
    <div class="row-form">
      <div class="span12">
        <%= paginate @bets %>
      </div>
    </div>
  <% end %>
  <div class="row-form">
    <div class="span12">
      <%= link_to 'Retour', list_game_bets_path %>
    </div>
  </div>
  <div class="row-form">
    <div class="span12">
      <%= link_to 'Accueil', root_path %>
    </div>
  </div>
</div>
