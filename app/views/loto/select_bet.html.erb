<div class="page-header">
  <div class="icon">
    <span class="ico-arrow-right"></span>
  </div>
  <h1>Loto bonheur - <%= session[:bet] == '1N' ? 'PN' : session[:bet] %> <%= session[:formula] %><small>Veuillez entrer les informations liées à votre compte Paymoney</small></h1>
</div>

<div class="row-fluid">
  <%= form_tag loto_place_bet_path do %>
    <div class="row-form">
      <div class="span12">
        <input type="text" name="paymoney_account_password" placeholder="Mot de passe du compte Paymoney"/>
        <span class="bottom">Mot de passe du compte Paymoney</span>
      </div>
    </div>
    <div class="row-form">
      <div class="span12">
        <button class="btn">Valider <span class="icon-arrow-next icon-white"></span></button>
      </div>
    </div>
    <div class="row-form">
      <div class="span12">
        <%= link_to 'Retour', loto_bet_path(session[:formula]) %>
      </div>
    </div>
  <% end %>
  <div class="row-form">
    <div class="span12">
      <%= link_to 'Accueil', root_path %>
    </div>
  </div>
</div>
