<div class="page-header">
  <div class="icon">
    <span class="ico-arrow-right"></span>
  </div>
  <h1>Loto bonheur - <%= session[:bet] %> <%= session[:formula] %><small><%= session[:bet] == '1N' ? 'Saisissez votre numéro' : "Saisissez vos numéros séparés d'un espace" %> (Entre 1 et 90)</small></h1>
</div>

<div class="row-fluid">
  <div class="row-form">
    <div class="span12">
      <input type="text" name="numbers" placeholder="Numéros"/>
      <span class="bottom">Numéros</span>
    </div>
  </div>
  <div class="row-form">
    <div class="span12">
      <input type="text" name="stake" placeholder="Mise de base"/>
      <span class="bottom">Mise de base</span>
    </div>
  </div>
  <div class="row-form">
    <div class="span12">
      <input type="text" name="gamer_id" placeholder="ID parieur"/>
      <span class="bottom">ID parieur</span>
    </div>
  </div>
  <div class="row-form">
    <div class="span12">
      <input type="text" name="paymoney_account_number" placeholder="Numéro de compte Paymoney"/>
      <span class="bottom">Numéro de compte Paymoney</span>
    </div>
  </div>
  <div class="row-form">
    <div class="span12">
      <input type="text" name="paymoney_account_password" placeholder="Mot de passe du compte Paymoney"/>
      <span class="bottom">Mot de passe du compte Paymoney</span>
    </div>
  </div>
  <div class="row-form">
    <div class="span12">
      <%= link_to 'Retour', loto_formula_selection_path(session[:bet]) %>
    </div>
  </div>
</div>
