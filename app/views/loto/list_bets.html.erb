<div class="page-header">
  <div class="icon">
    <span class="ico-arrow-right"></span>
  </div>
  <h1>Loto bonheur<small>Liste des paris</small></h1>
</div>

<div class="row-fluid">
  <% if @bets.blank? %>
  <div class="row-form">
    <div class="span12">
      Aucune transaction Ã  afficher
    </div>
  </div>
  <% else %>
    <% @bets.each do |bet| %>
      <div class="row-form">
        <div class="span12">
          <%= bet["bet_status"] %> - <%= bet["ticket_number"] %> - <%= bet["ref_number"] %>
        </div>
      </div>
    <% end %>
  <% end %>
  <div class="row-form">
    <div class="span12">
      <%= paginate @bets %>
    </div>
  </div>
  <div class="row-form">
    <div class="span12">
      <%= link_to 'Retour', list_games_path %>
    </div>
  </div>
  <div class="row-form">
    <div class="span12">
      <%= link_to 'Accueil', root_path %>
    </div>
  </div>
</div>
